<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FrameBackColor"
    android:padding="@dimen/widget_margin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/LinyerBackColor"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/widget_layout_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/LinyerColor"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/linearPadding"
            android:paddingRight="@dimen/linearPadding">
            <ImageView
                android:id="@+id/widget_img_launcher"
                android:layout_width="@dimen/ImageLayout"
                android:layout_height="@dimen/ImageLayout"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/single_note_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/StringText"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:paddingStart="@dimen/widget_margin"
                android:paddingLeft="@dimen/widget_margin"
                android:paddingEnd="@dimen/widget_margin"
                android:paddingRight="@dimen/widget_margin"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"/>
        <ListView
            android:id="@+id/widget_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </LinearLayout>

</FrameLayout>